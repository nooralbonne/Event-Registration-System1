@model Event_Registration_System.Models.Registration

@{
    ViewData["Title"] = "Delete Registration";
}

<h1 class="text-center my-4">@ViewData["Title"]</h1>

<h3 class="text-center">Are you sure you want to delete this?</h3>

<div class="container">
    <h4>Registration Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ParticipantName)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.ParticipantName)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Event)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Event.EventId)</dd>
    </dl>

    <form asp-action="Delete" class="text-center">
        <input type="hidden" asp-for="RegistrationId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
