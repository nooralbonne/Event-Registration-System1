@model IEnumerable<Event_Registration_System.Models.Registration>

@{
    ViewData["Title"] = "Registrations";
}

<h1 class="text-center my-4">@ViewData["Title"]</h1>

<div class="container">
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Registration</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ParticipantName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Event)
                </th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParticipantName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Event.EventId)
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.RegistrationId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.RegistrationId" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.RegistrationId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
